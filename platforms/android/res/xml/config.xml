<?xml version='1.0' encoding='utf-8'?>
<widget id="net.softwarealchemist.xpcalc" version="2.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>DnD XP Calculator</name>
    <description>
        Track player XP for DnD 3.5
    </description>
    <author email="support@softwarealchemist.net" href="http://softwarealchemist.net">
        The Software Alchemist
    </author>
    <content src="index.html" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <access origin="*" />
    <preference name="useBrowserHistory" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
</widget>
